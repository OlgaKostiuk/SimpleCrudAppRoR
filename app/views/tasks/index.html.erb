<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Done</th>
    <th>Update</th>
    <th>Delete</th>
  </tr>
  </thead>
  <tbody>
<% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %><td>
        <%= task.done %>
        <td><%= link_to t('update_task'), edit_task_path(id: task.id)%></td>
